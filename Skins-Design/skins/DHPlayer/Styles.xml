<?xml version="1.0" encoding="UTF-8"?>
<styles>
	<include Name="StyleBase.xml"/>

	<style>
		<WindowFrame EnableTranslucency="true" TranslucencyAlpha="255"
			 MinWidth="100" MinHeight="100" Width="330" Height="400"
			 BgColor="#FFFFFF" EnableClickThrough="false"
			 FontName="Verdana" FontHeight="13" TextColor="#000000" IsDialog="true">

			<Frame Rect="0,0,w,h" Image="frame.png" ImageRect="0,0,95,95"
				RoundWidthTop="30" RoundWidthBottom="5" ThickWidth="4" BlendPixMode="copy" TranslucencyWithSkin="TRUE"/>

			<DecorativeContainer Name="Caption bar" Rect="0,0,w,30" TranslucencyWithSkin="TRUE">
				<CaptionImage Rect="0,0,w,30" Name="Caption Bg" Image="frame.png" ImageRect="0,0,95,30"
					ImageFocus="frame-focus.png" ImageFocusRect="0,0,95,30" CutPos="20,50,50,80" BlendPixMode="copy"/>

				<Text ID="ID_CAPTION" Rect="24,5,w-80,20" CaptionText="true" FontName="Verdana" FontHeight="16" FontBold="false" TextColor="#FFFFFF" TextOutlinedColor="#000000" TextOutlined="true" LeftMargin="0" AlignText="AT_LEFT | AT_VCENTER"/>
				<Toolbar ID="CID_TB_SYSBT" Rect="w-10-20,8,20,16" TranslucencyWithSkin="TRUE"
					 Image="caption_btn.png" enablehover="TRUE" units_x="16"
					 blank_x="-1" blank_cx="16" seperator_x="0" seperator_cx="10"
					 MarginX="0" MarginY="0" ButtonSpacesCX="5" FullStatusImage="TRUE">
				  <button ID="ID_CLOSE" Left="4" />
				</Toolbar>
			</DecorativeContainer>

			<ClientArea Rect="5,31,w-10-5,h-30-10" ClipChildren="true"/>
		</WindowFrame>

		<MenuWindowFrame EnableTranslucency="true" TranslucencyAlpha="255" BgColor="#EBEBEB"
			MinWidth="100" MinHeight="100" Width="330" Height="400" EnableClickThrough="false"
			FontName="Verdana" FontHeight="13" TextColor="#000000" >

			<Frame Rect="0,0,w,h" Image="frame.png" ImageRect="0,0,95,95"
				RoundWidthTop="30" RoundWidthBottom="5" ThickWidth="4" BlendPixMode="copy" TranslucencyWithSkin="TRUE"/>

			<DecorativeContainer Name="Caption bar" Rect="0,0,w,30" TranslucencyWithSkin="TRUE">
				<CaptionImage Rect="0,0,w,30" Name="Caption Bg" Image="frame.png" ImageRect="0,0,95,30"
				  ImageFocus="frame-focus.png" ImageFocusRect="0,0,95,30" CutPos="20,50,50,80" BlendPixMode="copy"/>

				<MenuBar Rect="8,5,w/2-10,20" Name="Menu"
						 TranslucencyWithSkin="TRUE" FontName="Verdana"
				   FontHeight="13" FontBold="false" TextColor="#000000" TextOutlinedColor="#FFFFFF"
				   TextOutlined="TRUE" TextColorHover="#202020" TextOutlinedColorHover="#FFFFFF"
				   TextColorPressed="#FFFFFF" TextOutlinedColorPressed="#000000"
				   BgColorPressed="#D0D0D0" BgPressedAlpha="127"/>
				  
				<Text ID="ID_CAPTION" Rect="w/2,5,w/2-10-60-10,20" CaptionText="true" FontName="Verdana" FontHeight="16" FontBold="false" TextColor="#FFFFFF" TextOutlinedColor="#000000" TextOutlined="true" LeftMargin="0" AlignText="AT_LEFT | AT_VCENTER"/>
				<Toolbar ID="CID_TB_SYSBT" Rect="w-10-60,8,60,16" TranslucencyWithSkin="TRUE"
					 Image="caption_btn.png" enablehover="TRUE" units_x="16"
					 blank_x="-1" blank_cx="16" seperator_x="0" seperator_cx="10"
					 MarginX="0" MarginY="0" ButtonSpacesCX="5" FullStatusImage="TRUE">
					<button ID="ID_MINIMIZE" Left="1" />
					<button ID="ID_MAXIMIZE" Left="2" CanCheck="TRUE" checked_left="3"/>
				  <button ID="ID_CLOSE" Left="4" />
				</Toolbar>
			</DecorativeContainer>
      
		<ClientArea Rect="1,31,w-5,h-31-5" ClipChildren="true"/>
	</MenuWindowFrame>
		<PopupWndFrame EnableTranslucency="true" TranslucencyAlpha="255"
			 FixedWidth="true" FixedHeight="true"
			 BgColor="#ece9d8" EnableClickThrough="false">
		  <XScaleImage Left="0" Top="0" Width="w" Height="5" Name="Top border"
					   Image="menu_frame.png" ImageRect="0,0,50,5"
					   ImageScaleXStart="10" ImageScaleXEnd="40" BlendPixMode="copy"/>
		  <XScaleImage Left="0" Top="h-5" Width="w" Height="5" Name="Bottom border"
					   Image="menu_frame.png" ImageRect="0,15,50,5"
					   ImageScaleXStart="10" ImageScaleXEnd="40" BlendPixMode="copy"/>
		  <Image Left="0" Top="5" Width="1" Height="h-10" Name="left frame" 
				 Image="menu_frame.png" ImageRect="0,5,1,10" BltMode="tile"/>
		  <Image Left="w-1" Top="5" Width="1" Height="h-10" Name="left frame"
				 Image="menu_frame.png" ImageRect="49,5,1,10" BltMode="tile"/>
		  <ClientArea Rect="1, 5, w-2, h-5-5"/>
		</PopupWndFrame>

		<NormalToolbar Extends="LinearContainer" Orientation="Horizontal" Height="24" >
			<Toolbar ID="ID_TB_LYR_SYNC" Rect="8,1,72,22" Image="fl_buttons.png" enablehover="TRUE"
					units_x="22" blank_x="-1" blank_cx="22" seperator_x="220" seperator_cx="14" ButtonSpacesCX="1"
					Margin="8,1,0,0" MarginX="0" MarginY="0" FullStatusImage="TRUE">
				<button ID="ID_SEARCH_LYRICS" Left="5" />
				<button ID="ID_BACKWARD_LYRICS" Left="6" Continuous="TRUE"/>
				<button ID="ID_FORWARD_LYRICS" Left="7" Continuous="TRUE"/>
			</Toolbar>

			<Toolbar ID="ID_TB_LYR_TXT" Rect="8,1,50,22" Image="fl_buttons.png" enablehover="TRUE"
					units_x="22" blank_x="-1" blank_cx="22" seperator_x="220" seperator_cx="14" ButtonSpacesCX="1"
					Margin="8,1,0,0" MarginX="0" MarginY="0" FullStatusImage="TRUE">
				<button ID="ID_SEARCH_LYRICS" Left="5" />
				<button ID="CMD_LYR_EDITOR" Left="16"/>
			</Toolbar>

			<Toolbar Rect="86,1,w-88,22" Weight="1" Image="fl_buttons.png" enablehover="TRUE"
					units_x="22" blank_x="-1" blank_cx="22" seperator_x="220" seperator_cx="14" ButtonSpacesCX="1"
					Margin="0,1,0,0" MarginX="0" MarginY="0" FullStatusImage="TRUE">
				<seperator/>
				<button ID="ID_FONT_SIZE_INC" Left="8"/>
				<button ID="ID_FONT_SIZE_DEC" Left="9"/>
				<button ID="ID_LYR_HIGH_CLR_LIST" Left="14"/>
				<button ID="ID_RATE_LYR" Left="15"/>
				<seperator/>
				<button ID="ID_PREVIOUS" Left="0"/>
				<button ID="ID_PLAYPAUSE" Left="1" CanCheck="TRUE" checked_left="2"/>
				<button ID="ID_NEXT" Left="3"/>
			</Toolbar>
		</NormalToolbar>
		<RefreshButton Extends="Button" Width="16" Height="16" Image="refresh.png" ImageSize="16,16" ImagePos="0,0" ImageSelPos="0,16" ImageFocusPos="0,32" />
		<NormalText Extends="Text" Height="15" FontName="Verdana" FontHeight="13" TextColor="#000000"/>
		<TitleText Extends="Text" Height="25" FontName="Verdana" FontHeight="20" TextColor="#000000" AlignText="AT_CENTER"/>
		<ErrorText Extends="Text" Height="15" FontName="Verdana" FontHeight="13" TextColor="#FF0000"/>
		<NormalLink Extends="TxtLink" Height="15" FontName="Verdana" FontHeight="13" TextColor="#0000FF"/>
		<WndFrameCaption Extends="Text" ID="ID_CAPTION" Rect="30,4,w-60,20" Text="About MiniLyrics" FontHeight="16" FontBold="true" TextColor="#000000" TextOutlinedColor="#000000" TextOutlined="true" LeftMargin="0" AlignText="AT_CENTER | AT_VCENTER"/>
		<InfoText Name="InfoText" Rect="0,h-26,w,26" FontName="Verdana" FontHeight="16" FontItalic="1" TextColor="#0000FF"
			LeftMargin="10" TranslucencyWithSkin="TRUE"/>
	</style>
</styles>
